<p id="notice"><%= notice %></p>
<h1>Posts</h1>

<div class="mb-10">
  <%= link_to 'New Post', new_post_path, class: 'button' %>
</div>

<form class="mb-5 flex gap-3">
  <label>sort by:</label>


  <select name="post[order]">
    <label>Your order</label>
      <option>created_at, descending</option>
      <option>created_at, ascending</option>
      <option>likes, descending</option>
      <option>likes, ascending</option>
  </select>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <input class="p-3" type="submit" value="Submit">
</form>

<div>
  <div>
    <% @posts.each do |post| %>
      <%= render partial: "post", locals: {post: post} %>
    <% end %>
  </div>
</div>